{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/mini-crossword.schema.json",
  "title": "Mini Crossword Puzzle",
  "type": "object",
  "required": ["title", "date", "size", "grid", "clues"],
  "properties": {
    "title": { "type": "string" },
    "author": { "type": "string" },
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "size": {
      "type": "object",
      "required": ["rows", "cols"],
      "properties": {
        "rows": { "type": "integer", "minimum": 1 },
        "cols": { "type": "integer", "minimum": 1 }
      }
    },
    "grid": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "clues": {
      "type": "object",
      "required": ["across", "down"],
      "properties": {
        "across": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "down": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    }
  }
}

